#!/bin/sh
cd "$(dirname "$0")/.." || exit 1

npm test || exit 1

if [ "${SKIP_E2E:-0}" = "1" ]; then
  echo "Skipping Playwright e2e (SKIP_E2E=1)."
  exit 0
fi

if ! command -v bash >/dev/null 2>&1; then
  echo "Skipping Playwright e2e (bash not found in PATH)."
  exit 0
fi

npm run test:e2e || exit 1
